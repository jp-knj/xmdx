{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "exclude": ["exports", "types", "enumMembers", "unresolved"],
  "workspaces": {
    ".": {},
    "packages/xmdx": {
      "project": ["src/**/*.ts"]
    },
    "packages/astro-xmdx": {
      "project": ["src/**/*.ts"]
    },
    "packages/astro-loader": {
      "project": ["src/**/*.ts"],
      "ignoreBinaries": ["tsdown"],
      "ignoreDependencies": ["tsdown"]
    },
    "crates/napi": {
      "project": ["**/*.{js,ts}"],
      "ignoreDependencies": ["@xmdx/napi-.*", "prettier"]
    }
  },
  "ignoreBinaries": ["artifacts"],
  "ignoreWorkspaces": ["examples/*"]
}
