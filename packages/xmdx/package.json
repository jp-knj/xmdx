{
  "name": "xmdx",
  "version": "0.0.3-next.4",
  "description": "High-performance streaming Markdown to HTML parser built with Rust",
  "type": "module",
  "scripts": {
    "build": "tsdown src/node.ts src/browser.ts src/registry/index.ts --format esm --out-dir dist && tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "node": {
        "types": "./dist/node.d.ts",
        "import": "./dist/node.js"
      },
      "browser": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      },
      "edge-light": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      },
      "workerd": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      },
      "default": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      }
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "import": "./dist/registry/index.js"
    },
    "./wasm": {
      "types": "./wasm/xmdx_wasm.d.ts",
      "import": "./wasm/xmdx_wasm.js"
    }
  },
  "main": "./dist/node.js",
  "types": "./dist/node.d.ts",
  "files": [
    "dist",
    "wasm"
  ],
  "keywords": [
    "markdown",
    "parser",
    "rust",
    "streaming",
    "performance",
    "html",
    "wasm",
    "mdx"
  ],
  "author": "jp-knj",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jp-knj/xmdx"
  },
  "dependencies": {
    "@xmdx/napi": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "^0.15.0",
    "typescript": "^5.7.0"
  }
}
